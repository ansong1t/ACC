<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Acc.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Acc.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Acc.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Acc.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Acc.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Acc.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Acc.Body2</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Acc.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Acc.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Acc.LargeComponent</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

</resources>